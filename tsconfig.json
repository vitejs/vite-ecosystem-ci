{
	"include": ["./**/*.ts"],
	"exclude": ["**/node_modules/**", "./workspace/**"],
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"skipLibCheck": true,
		"strict": true,
		"declaration": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"useUnknownInCatchVariables": false,
		"allowSyntheticDefaultImports": true,
		"lib": ["esnext"],
		"sourceMap": true
	}
}
