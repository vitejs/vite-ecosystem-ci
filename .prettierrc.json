{
	"useTabs": true,
	"semi": false,
	"tabWidth": 2,
	"singleQuote": true,
	"printWidth": 80,
	"trailingComma": "all",
	"overrides": [
		{
			"files": ["*.json5"],
			"options": {
				"singleQuote": false,
				"quoteProps": "preserve"
			}
		},
		{
			"files": ["*.yml"],
			"options": {
				"singleQuote": false
			}
		},
		{
			"files": "**/pnpm-lock.yaml",
			"options": {
				"requirePragma": true
			}
		},
		{
			"files": "**/package.json",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
