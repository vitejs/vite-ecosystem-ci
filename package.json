{
  "name": "svelte-ecosystem-ci",
  "version": "0.0.1",
  "description": "svelte Ecosystem CI",
  "scripts": {
    "prepare": "pnpm exec simple-git-hooks",
    "lint": "eslint --ignore-path .gitignore '**/*.ts'",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --ignore-path .gitignore --check .",
    "format:fix": "pnpm format --write",
    "test:self": "tsx ecosystem-ci.ts _selftest",
    "test": "tsx ecosystem-ci.ts",
    "bisect": "tsx ecosystem-ci.ts bisect"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.ts": [
      "eslint"
    ]
  },
  "packageManager": "pnpm@8.6.0",
  "type": "module",
  "engines": {
    "node": ">=18",
    "pnpm": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sveltejs/svelte-ecosystem-ci.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sveltejs/svelte-ecosystem-ci/issues"
  },
  "homepage": "https://github.com/sveltejs/svelte-ecosystem-ci#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "cac": "^6.7.14",
    "execa": "^7.1.1",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.3",
    "@types/node": "^18.16.5",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.40.0",
    "eslint-define-config": "^1.20.0",
    "eslint-plugin-n": "^15.7.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "semver": "^7.5.0",
    "simple-git-hooks": "^2.8.1",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  }
}
